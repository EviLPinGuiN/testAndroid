<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:orientation="vertical">


            <android.support.design.widget.TextInputLayout
                android:id="@+id/ti_author_excavation_pub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/child_margin_top">

                <EditText
                    android:id="@+id/et_author_excavation_pub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/excavation_tv_author_pub"
                    android:inputType="text" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/ti_date_excavation_pub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ti_author_excavation_pub"
                android:layout_marginTop="@dimen/child_margin_top">

                <EditText
                    android:id="@+id/et_date_excavation_pub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/excavation_tv_date_pub"
                    android:inputType="number" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/ti_name_excavation_pub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ti_date_excavation_pub"
                android:layout_marginTop="@dimen/child_margin_top">

                <EditText
                    android:id="@+id/et_name_excavation_pub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/excavation_tv_name_pub"
                    android:inputType="text" />

            </android.support.design.widget.TextInputLayout>


            <TextView
                android:id="@+id/tv_belongs_excavation_pub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tv_belongs_to_monument"
                android:textSize="@dimen/text.20"
                android:layout_marginTop="@dimen/child_margin_top"
                android:layout_below="@+id/ti_name_excavation_pub"
                />

            <CheckBox
                android:id="@+id/cb_monument_excavation_pub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:layout_below="@+id/tv_belongs_excavation_pub"
                android:layout_marginTop="@dimen/card_items_margin"
                android:text="@string/monument"
                />


            <android.support.v7.widget.AppCompatButton
                android:id="@+id/button_next_excavation_pub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cb_monument_excavation_pub"
                android:layout_marginTop="@dimen/child_margin_top"
                android:layout_marginEnd="8dp"
                android:text="@string/next" />


        </RelativeLayout>
    </LinearLayout>
</ScrollView>

