<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_add_coll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/card_items_margin"
    android:layout_marginRight="@dimen/card_items_margin"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/card_items_margin"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_title_item_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/child_margin_top"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text.20" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/button_remove_item_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_cancel_black_24dp"
            android:layout_above="@+id/sp_filter"
            android:layout_alignParentEnd="true" />



        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/sp_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title_item_filter"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/child_margin_top">

        </android.support.v7.widget.AppCompatSpinner>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/ti_value_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sp_filter"
            android:layout_marginTop="@dimen/child_margin_top">

            <EditText
                android:id="@+id/et_valuer_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/advanced_value"
                android:inputType="text" />

        </android.support.design.widget.TextInputLayout>

    </RelativeLayout>

</LinearLayout>