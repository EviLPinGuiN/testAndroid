<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_add_culture"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/card_items_margin"
    android:layout_marginRight="@dimen/card_items_margin"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/card_items_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title_item_culture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text.20" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/button_more_action_item_culture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_more_vert_black_24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/animate_container_culture_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/card_items_margin"
        android:orientation="vertical">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/ti_name_culture_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_name_excavation_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/culture_tv_name"
                android:inputType="text" />

        </android.support.design.widget.TextInputLayout>


        <TextView
            android:id="@+id/tv_date_culture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/culture_tv_date"
            android:textSize="@dimen/text.18"
            android:layout_marginTop="@dimen/child_margin_top"
            android:layout_below="@+id/ti_name_culture_item"
            />



        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/sp_date_culture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/card_items_margin"
            android:layout_below="@+id/tv_date_culture"
            >

        </android.support.v7.widget.AppCompatSpinner>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/ti_from_culture_item"
            android:layout_width="@dimen/number_width"
            android:layout_height="wrap_content"
            android:layout_below="@id/sp_date_culture"
            android:layout_marginTop="@dimen/child_margin_top">

            <EditText
                android:id="@+id/et_from_culture_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/tv_from"
                android:inputType="number" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/ti_to_culture_item"
            android:layout_width="@dimen/number_width"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sp_date_culture"
            android:layout_marginTop="@dimen/child_margin_top"
            android:layout_alignParentEnd="true">

            <EditText
                android:id="@+id/et_to_culture_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/tv_to"
                android:inputType="number" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/ti_desc_culture_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ti_from_culture_item"
            android:layout_marginTop="@dimen/child_margin_top">

            <EditText
                android:id="@+id/et_desc_culture_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/culture_tv_description"
                android:inputType="text" />

        </android.support.design.widget.TextInputLayout>




    </RelativeLayout>
</LinearLayout>


