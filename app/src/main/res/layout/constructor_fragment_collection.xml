<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:orientation="vertical">


            <android.support.design.widget.TextInputLayout
                android:id="@+id/ti_name_collection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/child_margin_top">

                <EditText
                    android:id="@+id/et_name_collection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/collection_tv_name"
                    android:inputType="text" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/ti_book_collection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ti_name_collection"
                android:layout_marginTop="@dimen/child_margin_top">

                <EditText
                    android:id="@+id/et_book_collection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/collection_tv_number_book"
                    android:inputType="text" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/ti_inventory_collection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ti_book_collection"
                android:layout_marginTop="@dimen/child_margin_top">

                <EditText
                    android:id="@+id/et_inventory_collection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/collection_tv_number_inventory"
                    android:inputType="text" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/ti_accounting_collection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ti_inventory_collection"
                android:layout_marginTop="@dimen/child_margin_top">

                <EditText
                    android:id="@+id/et_accounting_collection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/collection_tv_accounting"
                    android:inputType="text" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/ti_field_number_collection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ti_accounting_collection"
                android:layout_marginTop="@dimen/child_margin_top">

                <EditText
                    android:id="@+id/et_field_number_collection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/collection_tv_field_number"
                    android:inputType="text"
                    android:selectAllOnFocus="false" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/ti_cipher_collection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ti_field_number_collection"
                android:layout_marginTop="@dimen/child_margin_top">

                <EditText
                    android:id="@+id/et_cipher_collection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/collection_tv_field_cipher"
                    android:inputType="text" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/ti_year_collection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ti_cipher_collection"
                android:layout_marginTop="@dimen/child_margin_top">

                <EditText
                    android:id="@+id/et_year_collection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/collection_tv_year"
                    android:inputType="number" />

            </android.support.design.widget.TextInputLayout>



            <android.support.v7.widget.AppCompatButton
                android:id="@+id/button_next_collection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ti_year_collection"
                android:layout_marginTop="@dimen/child_margin_top"
                android:layout_marginEnd="8dp"
                android:text="@string/next" />


        </RelativeLayout>
    </LinearLayout>
</ScrollView>

