<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_add_one_photo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/card_items_margin"
    android:layout_marginRight="@dimen/card_items_margin"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/card_items_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title_item_one_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text.20" />


        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/button_more_action_item_one_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_more_vert_black_24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/animate_container_one_photo_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/card_items_margin"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/button_pick_one_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_add_a_photo_black_24dp"
            android:text="@string/pick_photo" />

        <ImageView
            android:id="@+id/iv_pick_one_photo_item"
            android:layout_width="@dimen/photo_size"
            android:layout_height="@dimen/photo_size"
            android:visibility="gone"
            android:layout_below="@id/button_pick_one_photo"
            android:layout_marginTop="@dimen/child_margin_top" />


    </RelativeLayout>
</LinearLayout>

