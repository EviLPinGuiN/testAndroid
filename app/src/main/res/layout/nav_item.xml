<android.support.v7.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/card_items_margin"
    card_view:cardCornerRadius="@dimen/card_items_margin"
    android:elevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/cv_iv_create_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:gravity="center" />
            <!--android:src="@drawable/ic_create_list" -->


            <TextView
                android:id="@+id/cv_tv_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cv_iv_create_main"
                android:layout_centerHorizontal="true"
                android:paddingTop="@dimen/card_padding"
                android:gravity="center"
                android:textSize="@dimen/text.20"
                tools:text="@string/menu_create_data" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
