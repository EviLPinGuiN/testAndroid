<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_add_excavation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/card_items_margin"
    android:layout_marginRight="@dimen/card_items_margin"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/card_items_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title_item_excavation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text.20" />



        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/button_more_action_item_excavation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_more_vert_black_24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/animate_container_excavation_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/card_items_margin"
        android:orientation="vertical">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/ti_name_excavation_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_name_excavation_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/excavation_tv_name"
                android:inputType="text" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/ti_supervisor_excavation_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ti_name_excavation_item"
            android:layout_marginTop="@dimen/child_margin_top">

            <EditText
                android:id="@+id/et_supervisor_excavation_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/excavation_tv_supervisor"
                android:inputType="text" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/ti_area_excavation_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ti_supervisor_excavation_item"
            android:layout_marginTop="@dimen/child_margin_top">

            <EditText
                android:id="@+id/et_area_excavation_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/excavation_tv_area"
                android:inputType="number" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/tv_mapping_excavation_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_mapping_accuracy"
            android:textSize="@dimen/text.18"
            android:layout_marginTop="@dimen/child_margin_top"
            android:layout_below="@+id/ti_area_excavation_item"
            />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/sp_mapping_excavation_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/card_items_margin"
            android:layout_below="@+id/tv_mapping_excavation_item">
        </android.support.v7.widget.AppCompatSpinner>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/ti_n_excavation_item"
            android:layout_width="@dimen/number_width"
            android:layout_height="wrap_content"
            android:layout_below="@id/sp_mapping_excavation_item"
            android:layout_marginTop="@dimen/child_margin_top">

            <EditText
                android:id="@+id/et_n_excavation_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/tv_n"
                android:inputType="number" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/ti_e_excavation_item"
            android:layout_width="@dimen/number_width"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/sp_mapping_excavation_item"
            android:layout_marginTop="@dimen/child_margin_top">

            <EditText
                android:id="@+id/et_e_excavation_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/tv_e"
                android:inputType="number" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/tv_belongs_excavation_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_belongs_to_monument"
            android:textSize="@dimen/text.18"
            android:layout_marginTop="@dimen/child_margin_top"
            android:layout_below="@+id/ti_n_excavation_item"
            />

        <CheckBox
            android:id="@+id/cb_monument_excavation_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:layout_below="@+id/tv_belongs_excavation_item"
            android:layout_marginTop="@dimen/card_items_margin"
            android:text="@string/monument"
            />


    </RelativeLayout>
</LinearLayout>


