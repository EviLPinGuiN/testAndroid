<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_add_monument"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/card_items_margin"
    android:layout_marginRight="@dimen/card_items_margin"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/card_items_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title_item_monument"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text.20" />


        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/button_more_action_item_monument"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_more_vert_black_24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/animate_container_monument_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/card_items_margin"
        android:orientation="vertical">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/ti_name_monument_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_monument_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_monument"
                android:inputType="text" />

        </android.support.design.widget.TextInputLayout>


    </RelativeLayout>
</LinearLayout>

